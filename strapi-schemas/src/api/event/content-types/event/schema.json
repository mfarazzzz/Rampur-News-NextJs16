{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Local and cultural events"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "titleHindi": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "time": {
      "type": "string",
      "maxLength": 50
    },
    "venue": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "venueHindi": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "shared.address"
    },
    "category": {
      "type": "enumeration",
      "enum": ["cultural", "religious", "sports", "educational", "business", "entertainment", "food", "fashion"],
      "required": true
    },
    "organizer": {
      "type": "string",
      "maxLength": 200
    },
    "organizerHindi": {
      "type": "string",
      "maxLength": 200
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "descriptionHindi": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ticketPrice": {
      "type": "string",
      "maxLength": 100
    },
    "registrationLink": {
      "type": "string",
      "maxLength": 500
    },
    "isFree": {
      "type": "boolean",
      "default": false
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["upcoming", "ongoing", "completed", "cancelled"],
      "default": "upcoming"
    }
  }
}
