{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "siteNameHindi": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "tagline": {
      "type": "text",
      "maxLength": 300
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "socialLinks": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social-links"
    },
    "contact": {
      "type": "component",
      "repeatable": false,
      "component": "shared.contact"
    },
    "defaultAuthorRole": {
      "type": "enumeration",
      "enum": ["admin", "editor", "author", "contributor"],
      "default": "author"
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
