{
  "kind": "collectionType",
  "collectionName": "experts",
  "info": {
    "singularName": "expert",
    "pluralName": "experts",
    "displayName": "Expert",
    "description": "Career counselors and education experts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "nameHindi": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "designation": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "designationHindi": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "specialization": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "specializationHindi": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "bioHindi": {
      "type": "richtext"
    },
    "experience": {
      "type": "integer"
    },
    "education": {
      "type": "string",
      "maxLength": 500
    },
    "socialLinks": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social-links"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isVerified": {
      "type": "boolean",
      "default": false
    },
    "videoTutorials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::video-tutorial.video-tutorial",
      "mappedBy": "instructor"
    }
  }
}
