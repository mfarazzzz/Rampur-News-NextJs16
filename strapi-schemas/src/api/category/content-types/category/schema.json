{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "News categories with bilingual support"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "titleHindi": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "titleEnglish": {
      "type": "string",
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "titleEnglish",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "path": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parent"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
