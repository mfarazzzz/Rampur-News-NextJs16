{
  "collectionName": "components_shared_seo",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "SEO metadata for content"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160
    },
    "metaKeywords": {
      "type": "text",
      "maxLength": 300
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "canonicalUrl": {
      "type": "string",
      "maxLength": 500
    },
    "noIndex": {
      "type": "boolean",
      "default": false
    },
    "structuredData": {
      "type": "json"
    }
  }
}
